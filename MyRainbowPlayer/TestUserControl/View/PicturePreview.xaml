<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ec="http://schemas.microsoft.com/expression/2010/controls"
	mc:Ignorable="d"
	x:Class="TestUserControl.PicturePreview"
	x:Name="UserControl" Height="231" Width="287">

	<Grid x:Name="LayoutRoot">
		<DataGrid FontFamily="Lucida Console" UseLayoutRounding="False" Opacity="0.6">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Title" Foreground="#FFE78484"/>
				<DataGridCheckBoxColumn Header="Date Taken"/>
				<DataGridTextColumn Header="Size"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>